

exports.plot_time_series = function(image_collection,region,scale){

time_series = ui.Chart.image.series({
  imageCollection: image_collection,
  region: region,
  reducer: ee.Reducer.median(),
  scale: scale,
  xProperty: 'system:time_start'  
});

print("time_series",time_series);

};

//requires asset: single_feature

exports.create_time_series = function(img){
  var date = img.get('system:time_start');
  var layer_name = img.bandNames().get(0);
  var value = img.reduceRegion({
    geometry: single_feature.geometry(),
    reducer: ee.Reducer.median(),
    scale: scale_to_use,
    bestEffort: true}).get(layer_name);
  var feature = ee.Feature(null, {'system:time_start': date, 
                             'date': ee.Date(date).format('Y/M/d'), 
                             layer_name: value,//potrebbe non funzionare
                             id_name: ee.String(single_feature.getString(id_name))
  });
  return feature;
  
};


exports.export_time_series = function(time_series,layer_name,id_name,folder,description){
  var graph_ndfi2 = ui.Chart.feature.byFeature(time_series, 'system:time_start', layer_name);
  var columns = id_name.cat(", date, ").cat(layer_name);
  Export.table.toDrive({collection: time_series, description: description,
  selectors: columns,
  folder: folder});
};

